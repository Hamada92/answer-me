-unless comment.id.nil?
  %div{id: "Comment#{comment.id}"}
    .card.frow.comment
      .profile-pic.small
        =link_to(image_tag("avatar-50.png"), user_path(comment.user))
      .comment-body
        =comment.body
        %span.comment-owner
          -if owner comment
            =link_to("Edit", edit_comment_path(comment), remote: true)
            =link_to("Delete", comment_path(comment), method: :delete,  remote: true)
          -else
            =link_to(" " + comment.user.username, user_path(comment.user))
      .time.grey
        =local_relative_time(comment.created_at, type: 'time-or-date')




