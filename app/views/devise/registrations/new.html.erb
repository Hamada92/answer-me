<div class="col-md-4 col-md-offset-4 well signin">

  <h2 class="text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  
    <%= devise_error_messages! %>

    <div class="form-group has-feedback">
      <div class="col-sm-12">
        <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "User Name"%>
        <span class="form-control-feedback glyphicon glyphicon-user">
      </div>
    </div>

    <div class="form-group has-feedback">
      <div class="col-sm-12">
        <%= f.email_field :email,  class: "form-control", placeholder: "You University Email"%> 
        <span class="form-control-feedback glyphicon glyphicon-envelope">
      </div>
    </div>

    <div class="form-group has-feedback">
      <div class="col-sm-12">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "You Password (#{@minimum_password_length} characters minimum)"%>
        <span class="form-control-feedback glyphicon glyphicon-lock">
      </div>
    </div>

    <div class="form-group has-feedback">
      <div class="col-sm-12">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your Password"%>
        <span class="form-control-feedback glyphicon glyphicon-lock">
      </div>
    </div>

    <div class="form-group">
      <div class=" col-sm-12">
        <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg btn-block") do %>
          <i class="fa fa-sign-in"></i> Create Account
        <% end %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
