.sign-in.center-block.card
  %h3.text-center Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true, placeholder: "Email", wrapper_html: { class: 'has-feedback' }
      = f.input :password, required: false, placeholder: "Password"
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      .form-group
        = button_tag(type: 'submit', class: "btn btn-primary btn-lg btn-block") do
          Sign in
          %i.fa.fa-sign-in
  = render "devise/shared/links"
