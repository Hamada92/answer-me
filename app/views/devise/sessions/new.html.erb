<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group has-feedback">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control"%>
        <span class="form-control-feedback glyphicon glyphicon-user">
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <span class="form-control-feedback glyphicon glyphicon-lock">
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg btn-block") do %>
          <i class="fa fa-sign-in"></i> Log In
        <% end %>

      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>