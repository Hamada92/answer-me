.sign-in.center-block
  %h1.smaller Change your password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token, class: "errors"
    .form-inputs
      = f.input :password, label: "New password", required: true, autofocus: true, hint: "#{@minimum_password_length} characters minimum" if @minimum_password_length
      = f.input :password_confirmation, label: "Confirm new password", required: true
    .form-actions
      .form-group
        = f.button :submit, "Change my password"
  = link_to "Log in", new_session_path(resource_name)
