%nav.navbar.navbar-default.navbar-static-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", aria_expanded: "false", data: {toggle: "collapse", target: "#navbar"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to(image_tag("q-bulb.png", alt: "site logo"), root_path, class: "navbar-brand icon")
      =link_to("answer-me", root_path, class: "navbar-brand")
    .collapse.navbar-collapse#navbar
      %ul.nav.navbar-nav
        %li
          =link_to('Ask Question', new_question_path)
        %li
          =link_to('Users', users_path)
      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li.dropdown
            %a.dropdown-togggle.profile-pic.small{id: "nav-profile", href: "#", role: "button", aria: {haspopup: "true", expanded: "false"}, data: {toggle: "dropdown"}}
              =image_tag("avatar-50.png", alt: "profile pic", class: "img-circle")
              %span.caret
            %ul.dropdown-menu
              %li.dropdown-header
                Signed in as
                .strong
                  =current_user.username_was
              %li.divider{role: "separator"}
              %li
                =link_to('My Profile', user_path(current_user))
              %li
                =link_to("Settings", account_edit_profile_path)
              %li.divider{role: "separator"}
              %li
                =link_to("Sign Out", destroy_user_session_path, method: :delete)
