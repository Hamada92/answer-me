.vote-button
  -if user_signed_in? and likeable.user_id != current_user.id
    -if likeable.like_by(current_user.id)
      =render 'likes/remove_like', like: likeable.like_by(current_user.id), num_likes: likeable.num_likes
    -else
      =render 'likes/add_like', path: path, num_likes: likeable.num_likes
  -else
    %button.btn.btn-default.btn-xs{disabled: "disabled", type: "button"}
      ="+ " + "#{likeable.num_likes}"

