=form_for @question do |f|
  .error
    =render 'partials/errors', resource: @question

  =f.fields_for :tags do |t|
  
    =t.label :category
    =t.select :category, QuestionsHelper::CATEGORIES, {}, id: "category_select"
  
    =t.text_field :name, autocomplete: "off", placeholder: "Enter a course name... eg. MATH 101", id: "tag_input"
    
    =t.hidden_field :university, value: current_user.university

  =f.label :title
  =f.text_field :title, autocomplete: "off"

  =f.label :body
  =f.text_area :body

  =f.submit 'Post', class: 'button'

  .question_keydown
  