-if current_user == @user
  =link_to("Edit Account", edit_user_registration_path)

%h2
  =@user.first_name 
  =@user.last_name
  -if @user.first_name.nil? and @user.last_name.nil?
    =@user.username
  -else
    %i= "&#40".html_safe + @user.username + "&#41".html_safe 

Score:
=@user.score
%br
=@user.university

%h3 Questions

-@questions.each do |q|
  =render 'questions/link', question: q

%h3 Answers

-@questions_he_answered.each do |q|
  =render 'questions/link', question: q

